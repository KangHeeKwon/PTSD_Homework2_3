<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/Login_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:text="로그인"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/id_edit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="400dp"
        android:hint="아이디" />

    <EditText
        android:id="@+id/password_edit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/id_edit"
        android:layout_centerHorizontal="true"
        android:hint="패스워드" />


    <ImageButton
        android:id="@+id/google_image_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/login_button"
        android:layout_centerHorizontal="true"
        android:layout_toLeftOf="@id/kakao_image_button"
        android:background="#00FFFFFF"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/ic_logo_google" />

    <ImageButton
        android:id="@+id/kakao_image_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/login_button"
        android:layout_centerHorizontal="true"
        android:background="#00FFFFFF"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/ic_logo_kakao" />

    <ImageButton
        android:id="@+id/never_image_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/login_button"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@id/kakao_image_button"
        android:background="#00FFFFFF"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/ic_logo_naver" />

    <Button
        android:id="@+id/login_button"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@id/password_edit"
        android:layout_centerHorizontal="true"
        android:text="로그인" />

    <Button
        android:id="@+id/sing_up_button"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_below="@id/google_image_button"
        android:layout_alignRight="@id/kakao_image_button"
        android:layout_marginRight="50dp"
        android:layout_centerHorizontal="true"
        android:background="#00FFFFFF"
        android:text="회원가입"
        android:textColor="#AE000000" />

    <Button
        android:id="@+id/password_find_button"
        android:layout_width="125dp"
        android:layout_height="50dp"
        android:layout_below="@id/never_image_button"
        android:layout_toRightOf="@id/sing_up_button"
        android:background="#00FFFFFF"
        android:text="비밀번호 찾기"
        android:textColor="#AE000000" />

</RelativeLayout>
